<UserControl x:Class="ucChangeEmployee"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AccountLogin_WPF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="150*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <Label Content="Enter Employee Name"/>
            <Button Name="btnGet" Content="Get Employee"/>
            <Button Name="btnBack" Content="Back"/>
        </StackPanel>
        <StackPanel Grid.Column="1">
            <TextBox Name="searchBox" />
            <DataGrid Name="SelectedPart" Height="200"/>
            <Button Name="btnConfirm" Content="Confirm Change"/>
            <Button Name="btnClear" Content="Clear"/>

        </StackPanel>
    </Grid>
</UserControl>
