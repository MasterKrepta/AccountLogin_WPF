<Window x:Class="Cardex"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AccountLogin_WPF"
        mc:Ignorable="d"
        Title="Cardex" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="150*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <Label Content="Enter Product Name"/>
            <Button Name="btnGet" Content="Search"/>
            <Button Name="btnBack" Content="Back"/>
        </StackPanel>
        <StackPanel Grid.Column="1">
            <TextBox Name="searchBox" />
            <DataGrid Name="cardexResults" Height="200"/>

            <Button Name="btnClear" Content="Clear"/>

        </StackPanel>
    </Grid>
</Window>
